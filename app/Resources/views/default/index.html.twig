{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    <b>Alert :</b> {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="col-md-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th style="width:5%">Id</th>
                <th>Task</th>
              </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.label }}</td>
                </tr>
                {% endfor %}
                <tr>
                    <form method="post" action="{{ app.request.baseurl }}/add">
                        <td colspan="2">
                            <input type="textbox" name="label" class="small-6 small-center" placeholder="New task description..." required> <button type="submit" class="btn btn-sm btn-primary">Add</button>
                        </td>
                    </form>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
